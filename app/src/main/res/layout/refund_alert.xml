<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    >
    <RadioGroup
        android:id="@+id/radio_grp_cause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        >
        <RadioButton
            android:id="@+id/rb_damaged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damaged"
            android:fontFamily="@font/nexademo_light"
            />
        <RadioButton
            android:id="@+id/rb_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poor quality"
            android:fontFamily="@font/nexademo_light"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        >
    <TextView
        android:textSize="12sp"
        android:text="Bill no:"
        android:padding="5dp"
        android:textColor="@color/deepgray"
        android:fontFamily="@font/nexademo_light"
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_bill_no"
        android:textSize="12sp"
        android:text="bill no"
        android:padding="5dp"
        android:textColor="@color/deepgray"
        android:fontFamily="@font/nexademo_light"
        android:layout_width="0dp"
        android:layout_weight=".8"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/wapplogo"
            android:layout_weight=".1"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:textSize="12sp"
            android:fontFamily="@font/nexademo_light"
            android:textColor="@color/deepgray"
            android:text="For refund kindely wapp on +919674345373 along with the photo of product,bill no, and name from registered mobile number"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- or -"
        android:textColor="@color/deepgray"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/nexademo_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:weightSum="1"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/gmail"
            android:layout_weight=".1"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:textSize="12sp"
            android:textColor="@color/deepgray"
            android:fontFamily="@font/nexademo_light"
            android:text="For refund kindely mail on rituraj10saha@gmail.com along with the photo of product,bill no, and name from registered mail id"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:textColor="@color/white"
        android:text="proceed"
        android:fontFamily="@font/nexademo_light"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:textColor="@color/white"
        android:text="cancel"
        android:textStyle="bold"
        android:fontFamily="@font/nexademo_light"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>