<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#013685"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Mee Coins"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/nexademo_light"
        android:background="#014cbd"
        />
<pl.droidsonroids.gif.GifImageView
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:src="@drawable/app_gi"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="2dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coin_back"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Mee coins"
            android:textColor="@color/white"
            android:gravity="start"
            android:paddingTop="2dp"
            android:textStyle="bold"
            android:fontFamily="@font/nexademo_light"
            />

    <TextView
        android:id="@+id/collected_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000 coins"
        android:textColor="#DFAD00"
        android:textSize="18sp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="2dp"
        android:textStyle="bold"
        />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="30dp"
        android:text="Number of coins depends on your bucket value and you can redeem the coins into your wallet"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:fontFamily="@font/nexademo_light"
        />
    <!--<Button
        android:id="@+id/btn_cancel"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/boundary_only"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />-->

    <Button
        android:id="@+id/btn_reddem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#016fb5"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Transfer coins to Mee Wallet"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/nexademo_light"
        />

</LinearLayout>