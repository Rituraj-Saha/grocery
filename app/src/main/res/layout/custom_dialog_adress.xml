<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add New Address"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:paddingTop="8dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Address details"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="25dp"
        />
    <EditText
        android:id="@+id/et_housename"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="House No."
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        />
    <EditText
        android:id="@+id/et_strtname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Streat Name"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        />
    <EditText
        android:id="@+id/et_lndmrk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Landmark"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        />
    <EditText
        android:id="@+id/et_pin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Pincode"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:inputType="number"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:paddingStart="2dp"
                android:src="@drawable/ic_location_pin_profile"
                />

            <TextView
                android:id="@+id/txt_add_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:text="location"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="15sp"
                android:textColor="@color/deepgray"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crd_pin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:paddingStart="2dp"
               android:text="Pin"
                />

            <TextView
                android:id="@+id/txt_pin_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:text="location"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="15sp"
                android:textColor="@color/deepgray"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:background="#e46667"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:src="@drawable/ic_gps_fixed_white_24dp"
            android:padding="15dp"
            />
        <Button
            android:id="@+id/lin_add_current_get_bill"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".7"
            android:text="Get location"
            android:textColor="@color/white"
            android:background="#e46667"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:padding="10dp"
            android:textAllCaps="false"
            >

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@android:color/holo_red_light"
            android:text="cancel"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btn_add_addresss"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/colorPrimary"
            android:text="ADD"
            android:textColor="@color/white"
            />

    </LinearLayout>

</LinearLayout>