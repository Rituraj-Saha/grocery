<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/profile_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Almost There !"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/deepgray"
                    />
                <TextView
                    android:id="@+id/helpus"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Help us to know you better"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/lightgray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:weightSum="1"
                        >
                        <TextView
                            android:id="@+id/txt_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:text="First Name"
                            android:textSize="18sp"
                            android:paddingTop="15dp"
                            android:visibility="gone"
                            />
                        <EditText
                            android:id="@+id/et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:hint="First Name"
                            android:textSize="18sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:weightSum="1"
                        >
                        <TextView
                            android:id="@+id/txt_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:text="Last Name"
                            android:textSize="18sp"
                            android:paddingTop="15dp"
                            android:visibility="gone"
                            />
                        <EditText
                            android:id="@+id/et_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:hint="Last Name"
                            android:textSize="18sp"
                            />

                    </LinearLayout>

                </LinearLayout>



              <!--  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Email Address"
                    />-->

                <EditText
                    android:id="@+id/userprofileemail_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Email address"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    >
                </EditText>


                <TextView
                    android:id="@+id/location_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="location"
                    android:textSize="18sp"
                    android:background="@android:color/white"
                    android:visibility="gone"
                    />




                <TextView
                    android:id="@+id/txt_add_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="klm"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    >

                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crd_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".15"
                            android:paddingStart="2dp"
                            android:src="@drawable/ic_location_pin_profile"
                            />

                        <EditText
                            android:id="@+id/txt_add_5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".85"
                            android:text="location"
                            android:paddingStart="5dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="2dp"
                            android:textSize="15sp"
                            android:textColor="@color/deepgray"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/txt_add_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="efg"
                    android:textColor="@android:color/black"
                    android:background="@drawable/boarder_image_blue"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    >

                </TextView>


                <LinearLayout
                    android:id="@+id/btn_add_get"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="5dp"
                    android:background="#e46667"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:src="@drawable/ic_gps_fixed_white_24dp"
                        android:padding="15dp"
                        />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".7"
                    android:text="Get your current location"
                    android:textColor="@color/white"
                    android:background="#e46667"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    >

                </Button>

                </LinearLayout>

                <!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Type"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="80dp"
                    android:padding="10dp"
                    android:textSize="18sp"
                    />-->

                <TextView
                    android:id="@+id/service_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Client"
                    android:textSize="18sp"
                    android:background="@android:color/white"
                    android:layout_marginStart="90dp"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"

                    />

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Proceed"
                    android:background="#E5BFBF"
                    android:textColor="@android:color/white"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/wallet_exist"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/coin_exist"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="0"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@android:color/holo_green_light"
                    />

            </LinearLayout>

        </RelativeLayout>


        </RelativeLayout>

</ScrollView>