    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_parent_lin"
        android:paddingBottom="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/sub_history_item_pic_img"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="2dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:paddingBottom="2dp"
                android:src="@drawable/banana"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".5"
                >
                <TextView
                    android:id="@+id/sub_history_item_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iteam Name"
                    android:paddingStart="5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/sub_history_item_subhead_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="subhead"
                    android:textAlignment="textStart"
                    android:paddingStart="5dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"
                        android:text="Qty"
                        android:textColor="@color/deepgray"
                        android:paddingStart="5dp"
                        />
                    <TextView
                        android:id="@+id/sub_history_qty_txt"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".8"
                        android:text="qty"
                        android:paddingStart="5dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/deepgray"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_access_time_black_24dp"
                        />
                    <TextView
                        android:id="@+id/sub_history_repetation_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:text="Monthly: 1st of every month"
                        android:paddingStart="5dp"
                        android:paddingEnd="2dp"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:textColor="@color/deepgray"
                        android:textStyle="bold"
                        />
                </LinearLayout>


